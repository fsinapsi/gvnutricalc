(defun gui-fonti (alimento) net gui-fonti)
(defnet gui-fonti (alimento @a)
        (deflocal db q asc n i j)

        (set db <_kv "db">)
        (set q (queue))
        (queue-put q alimento)
        (set asc (assoc))
        (set @a (array 0))
        (while (> (length q) 0) do
                (set n (queue-get q))
                (for i in <db n 1> do
                        (set j (car i))
                        (if (> (dgraph-getedgeval db j n) 0)
                        then    (if (= <asc j> undef)
                                then    (set <asc j> true)
                                        (array-append @a j)
                                        (queue-put q j) ))))
        (array-append @a alimento)
        (sort @a) )

