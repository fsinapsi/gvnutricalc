(defun gui-succ (alimento) net gui-succ)
(defnet gui-succ (alimento @asc)
        (deflocal db q i j)

        (set db <_kv "db">)
        (set q (queue))
        (set @asc (assoc))
        (for i in alimento do
                (set j (car i))
                (queue-put q j)
                (set <@asc j> true) )
        (while (> (length q) 0) do
                (for i in <db (queue-get q) 0> do
                        (set j (car i))
                        (if (= <@asc j> undef)
                        then    (queue-put q j)
                                (set <@asc j> true) ))))

